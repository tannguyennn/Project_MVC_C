@model IEnumerable<Project_63132204.Models.DichVu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutNV.cshtml";
    int i = 0;
}

<h2>DANH SÁCH DỊCH VỤ</h2>

<table class="table">
    <tr>
        <th>
            STT
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenDV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TonKho)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonVi)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.LoaiDichVu.TenLDV)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @{ i++;}
                @i;
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenDV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TonKho)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonVi)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.LoaiDichVu.TenLDV)
            </td>
            <td>

                @Html.ActionLink("Details", "Details", new { id = item.MaDV })
            </td>
        </tr>
    }

</table>

