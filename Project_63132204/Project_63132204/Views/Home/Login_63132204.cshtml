@model Project_63132204.Models.KhachHang
@{
    ViewBag.Title = "Login_63132204";
    Layout = "~/Views/Shared/_LayoutKH.cshtml";
}
<head>
    <meta charset="UTF-8">
    <title>Đăng ký</title>
    <style>
        .form-container {
            max-width: 50rem;
            margin: 0 auto;
            border: 0.5rem solid #222;
            padding: 2rem;
            text-align: center;
            margin-top: 2rem;
        }

            .form-container h3 {
                margin-bottom: 1rem;
                font-size: 2.5rem;
                text-transform: uppercase;
                color: #222;
            }

            .form-container .box {
                margin: 1rem 0;
                padding: 1.4rem;
                color: #222;
                border: 0.1rem solid #222;
                font-size: 1.8rem;
                width: 100%;
                max-width:40rem;
            }

            .form-container p {
                margin-top: 1.5rem;
                font-size: 2rem;
                color: #222;
            }

                .form-container p a {
                    font-size: 2rem;
                    color: #ff0000;
                }

                    .form-container p a:hover {
                        color: #222;
                    }
    </style>
</head>
@using (Html.BeginForm("Login_63132204", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <section class="form-container">
        <form action="" method="post">
            <h3>Đăng nhập</h3>
            <table align="center">
                <tr>
                    <th>
                        <input type="text" required maxlength="50" name="taikhoan" placeholder="Tài khoản" class="box">
                    </th>
                </tr>
                <tr>
                    <th>
                        <input type="password" required maxlength="20" name="password" placeholder="Mật khẩu" class="box">
                    </th>
                </tr>
                <tr>
                    <th>
                        <input type="submit" value="Đăng nhập" class="btn" name="submit">
                    </th>
                </tr>
            </table>
            
            
            
            <p>Bạn chưa có tài khoản? <a href="~/Home/Register_63132204">Đăng ký ngay</a></p>
            <span>@ViewBag.error</span>
        </form>
    </section>
}

